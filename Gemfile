source "https://rubygems.org"

# Nanoc is a static site generator
gem 'nanoc'

# Write posts using markdown
gem 'kramdown'

# Relativize
gem 'nokogiri'

# Use SASS for style
gem 'sass'
gem 'bootstrap', '~> 4.0.0.alpha3.1'

group :development do
  # server
  gem 'adsf'
end

group :nanoc do
  # Guard: compile when changes are detected
  gem 'guard-nanoc'
end
